{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(lldb) Launch lifter",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/bazel-bin/recompilation/lifter/lifter",
      "args": [
        "--elf_filename", "recompilation/disassembler/multiple_functions.elf",
        "--bc_out", "recompilation/lifter/heroes3.bc"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "sourceMap": {"/proc/self/cwd/": "${workspaceFolder}", "/proc/self/cwd/external": "${workspaceFolder}/bazel-uwin/external"},
      "preLaunchTask": "buildLifterDebug",
    }
  ]
}